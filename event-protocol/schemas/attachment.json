{
  "id": "https://raw.github.com/cucumber/cucumber/master/event-protocol/schemas/attachment.json#",
  "title": "source",
  "type": "object",
  "properties": {
    "type": {
      "type": "string"
    },
    "timestamp": { "$ref": "defs.json#/timestamp" },
    "series": { "$ref": "defs.json#/series" },
    "source": {
      "type": "object",
      "properties": {
        "uri": {
          "type": "string"
        },
        "start": {
          "type": "object",
          "properties": {
            "line": {
              "type": "integer",
              "minimum": 1
            },
            "column": {
              "type": "integer",
              "minimum": 1
            }
          },
          "required": [
            "line"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "uri",
        "start"
      ],
      "additionalProperties": false
    },
    "data": {
      "type": "string"
    },
    "media": {
      "type": "object",
      "properties": {
        "encoding": {
          "enum": [
            "utf-8",
            "base64"
          ]
        },
        "type": {
          "type": "string"
        }
      },
      "required": [
        "encoding",
        "type"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "type",
    "timestamp",
    "series",
    "source",
    "data",
    "media"
  ],
  "additionalProperties": false
}
